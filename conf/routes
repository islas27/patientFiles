# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /index                                  Application.index
GET     /plansPayments                          Application.plansPayments
GET     /newDentist                             Application.newDentist
POST    /newDentist                             Application.saveUser

GET     /members/index                          MembersArea.index
GET     /members/myProfile                      MembersArea.index
GET     /members/listPatients                   MembersArea.listPatients
GET     /members/newPatient                     MembersArea.newPatient
GET     /members/newProcedure                   MembersArea.newProcedure
GET     /members/patient/{id}                   MembersArea.pat

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import CRUD routes
*     /admin           module:crud

*       /auth       module:securesocial

# Catch all
*       /{controller}/{action}                  {controller}.{action}
